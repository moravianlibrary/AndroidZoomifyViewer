<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_primary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cz.mzk.tiledimageview.demonstration.intro.IntroActivity">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/intro_thumb_size"
        android:layout_height="@dimen/intro_thumb_size"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:background="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/thumb_caching"
        />

    <Button
        android:id="@+id/btnTry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="@string/intro_btn_try_it"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/intro_title_margin_top"
        android:text="@string/intro_caching_title"
        android:textColor="@color/intro_title_color"
        android:textSize="@dimen/intro_title_textsize"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:orientation="vertical"
        android:padding="8dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_caching_text1"
            android:textColor="@color/intro_text_color"
            android:textSize="@dimen/intro_text_textsize"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_caching_text2"
            android:textColor="@color/intro_text_color"
            android:textSize="@dimen/intro_text_textsize"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/intro_caching_text3"
            android:textColor="@color/intro_text_color"
            android:textSize="@dimen/intro_text_textsize"
            />

    </LinearLayout>

</RelativeLayout>


